<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="mediaInfoData"
            type="com.brownik.sampleproject.MediaInfoData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/musicInfoLayer"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp">

        <ImageView
            android:id="@+id/ivMusicImg"
            android:layout_width="200dp"
            android:layout_height="88dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-98dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivMusicImg"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvMediaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="@{mediaInfoData.title}"
                app:changeColor="@{mediaInfoData.selected}"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMediaArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{mediaInfoData.artist}"
                app:changeColor="@{mediaInfoData.selected}"
                android:textColor="#333333"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMediaTitle" />

            <TextView
                android:id="@+id/tvMediaDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawablePadding="4dp"
                android:text="base duration"
                app:changeColor="@{mediaInfoData.selected}"
                app:makeDuration="@{mediaInfoData.duration}"
                android:textColor="#989898"
                android:textSize="11dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMediaArtist" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
